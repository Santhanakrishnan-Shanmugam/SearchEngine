# Use a local lightweight Alpine image
FROM python:3.11


# Install Python and required tools
RUN apk add --no-cache python3 py3-pip bash git

# Set working directory
WORKDIR /app

# Copy backend files
COPY main.py chain.py ./
COPY .env ./

# Install Python dependencies
RUN pip3 install --no-cache-dir fastapi uvicorn torch transformers requests beautifulsoup4 langchain langchain_community langchain_google_genai chromadb

# Expose port
EXPOSE 8080

# Start FastAPI app
CMD ["python3", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]
